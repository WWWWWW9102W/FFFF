class Create_Personage:
    def __init__(self, name_pers, Class_pers, hp_pers, damage_pers):
        self.name = name_pers
        self.Class = Class_pers
        self.hp = hp_pers
        self.damage = damage_pers

        def print_info(self):
            print(f"name: {self.name_pers}\nclass: {self.Class_pers}\nhp: {self.hp_pers}\ndamage: {self.damage_pers}\n")
            def go_on_a_trip(self):
                print(f"pers {self.ame_pers} отправился в путешествие и пока не доступен")
                def start_training(self):
                    print(f"pers {self.name_pers} возвращается назад")
                    def start_training(self):
                        self.hp_pers += 3
                        self.damage_pers += 5
                        print(f"pers {self.name_pers} начал тренировку. Некоторое время он не будет доступен, однако станет сильнее!\n")
